<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bottomBackground">
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/background"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:id="@+id/musicinfo"
        android:layout_below="@id/seekBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />


    <ImageButton
        android:id="@+id/bluetooth_button"
        android:onClick="bluetoothClick"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@android:drawable/stat_sys_data_bluetooth"
        android:layout_below="@+id/musicinfo"
        android:layout_alignTop="@+id/play_pause"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>


    <ImageView
        android:id="@+id/play_mode"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_shuffle_black_24dp"
        android:onClick="changeMode"
        android:layout_alignTop="@+id/play_pause"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />

    <ImageView
        android:id="@+id/play_pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/play"
        android:onClick="play_pause"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/next"
        android:onClick="next"
        android:layout_toRightOf="@+id/play_pause"
        android:layout_toEndOf="@+id/play_pause"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignTop="@+id/play_pause"
         />

    <ImageView
        android:id="@+id/previous"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/previous"
        android:onClick="previous"
        android:layout_toLeftOf="@+id/play_pause"
        android:layout_toStartOf="@+id/play_pause"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/play_pause"
         />



</RelativeLayout>
